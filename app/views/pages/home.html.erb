 <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.4) 5%), url('<%= image_path("guitar-hero2.jpg") %>')">

  <!-- img_path('assets/images/guitar-hero.jpg');"> -->



  <div class="banner-content">
    <h1>GuitarBuddy</h1>
    <p>Rent the best guitar. Choose your brand, location and date</p>


    <div class="search-bar">
      <form action="/guitars" class="form-inline padded">

        <input type="text" name="brand" class="form-control border-radius input-lg" placeholder="Brand">
        <input type="text" name="address" class="form-control border-radius input-lg" id="guitar_address" placeholder="City">
        <input type="date" name="starts_at" class="form-control border-radius input-lg datepicker" placeholder="City" id="starts_at">
        <input type="date" name="ends_at" class="form-control border-radius input-lg datepicker" placeholder="City" id="ends_at">
        <input type="submit" class="btn btn-danger btn-lg btn-custom" value="Search">
      </form>
    </div>
  </div>
</div>


<% content_for :after_js do %>
<script>
  $(document).on("focus", "[data-behaviour~='datepicker']", function(e) {
  $(this).datepicker;
  return {
    format: "dd-mm-yyyy",
    weekStart: 1,
    autoclose: true
  };
});
</script>
<% end %>
