

<div class="wrapper">

  <div class="card-heading">
    <h4>Guitars I Have Booked</h4>
  </div>

  <div class="booked-guitars-container">
    <% @bookings.each do |b| %>
    <% duration = Date.parse(b[:ends_at]) - Date.parse(b[:starts_at]) %>
    <% fee = b.fixed_price.to_i * 0.1 %>
    <% grand_total = b.fixed_price.to_i * 1.1 %>
      <div class="card-content">
        <div class="card-text">
          <p><b><%= b.guitar[:brand] %></b></p>
          <p><%= "TIME: #{b[:starts_at]}--#{b[:ends_at]}" %> 
          <strong> <%= "(#{duration.round} Days)" %></strong></p>
          <p><%= "TYPE: #{b.guitar[:category]}" %></p>
          <p><%= "Price/Day: #{b.guitar[:price_per_day]}" %></p>
          <p><%= "TOTAL: #{grand_total.to_i} â‚¬"%>
          <strong><%= "(plus fees)" %></strong></p>
        </div>
        <div>
          <p><%= image_tag b.guitar.image %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>


<div class="wrapper">

  <div class="card-heading">
    <h4>Guitars I Have Uploaded</h4>
  </div>

  <div class="booked-guitars-container">
    <% @guitars.each do |g| %>
      <div class="card-content">

        <div class="card-text">
          <p><b><%= g[:brand] %></b></p>
          <p><%= "PRICE: #{g[:price_per_day]}" %></p>
          <p><%= "TYPE: #{g[:category]}" %></p>
          <% if g.bookings.present? %>
            <p><b>BOOKINGS FOR THIS GUITAR</b></p>
              <% g.bookings.each do |b| %>
                <p><b><%= b.guitar[:brand] %></b></p>
                <p><%= "TIME: #{b[:starts_at]}--#{b[:ends_at]}" %></p>
                <p><%= "TYPE: #{b.guitar[:category]}" %></p>
                <p><%= "USER: #{b.guitar.user[:email]}" %></p>
              </div>
        </div>

        <div>
          <p><%= image_tag b.guitar.image %></p>
        </div>

              <% end %>
              <% else %>
            <p><b>No one Has Booked This Guitar Yet</b></p>
          <% end %>
      <% end %>

    </div>
  </div>

</div>
 


